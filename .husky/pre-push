# Run type checking
echo "ğŸ“ Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type check failed. Please fix TypeScript errors."
  exit 1
fi

# Run linting check (without auto-fix)
echo "ğŸ” Linting..."
npm run lint:check
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix linting errors."
